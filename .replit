modules = ["nodejs-20", "web", "postgresql-16", "python-3.11", "python3"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "autoconf", "cmake", "freetype", "git", "lcms2", "libGL", "libcxx", "libimagequant", "libjpeg", "libtiff", "libtool", "libwebp", "libxcrypt", "mesa", "mtdev", "ncurses", "nmh", "openjdk", "openjpeg", "openssl", "pkg-config", "tcl", "tk", "unzip", "zip", "zlib"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40979
externalPort = 4200

[[ports]]
localPort = 41683
externalPort = 3001

[[ports]]
localPort = 45539
externalPort = 3000

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web App"

[[workflows.workflow]]
name = "Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx server/index.ts"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
integrations = ["firebase_barebones_javascript:1.0.0"]
expertMode = true
